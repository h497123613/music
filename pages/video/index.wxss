/* pages/video/index.wxss */
/* header */
.videoContainer {
  height: 100%;
}
.videoContainer .header {
  height: 80rpx;
  display: flex;
  padding: 0 10rpx;
  align-items: center;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  text-align: center;
  color: red;
  font-size: 30rpx;
  line-height: 64rpx;
  height: 64rpx;
  box-sizing: border-box;
  margin: 0 20rpx;
  flex: 1;
  border: solid #aaa 1rpx;
}

/* scroll-view nav导航 */
.videoContainer .navScroll {
  height: 60rpx;
  display: flex;
  padding-left: 20rpx;
}
.videoContainer .navScroll .navItem {
  font-size: 30rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  margin-right: 50rpx;
  flex-shrink: 0;
}

.videoContainer .navScroll .navItem.active {
  border-bottom: 1px solid red;
}

/* 视频 */
.videoContainer .videoScroll {
  height: calc(100vh - 150rpx);
  padding-top: 10rpx;
}
.videoContainer .videoScroll .videoItem{
  padding: 0 20rpx;
}
.videoContainer .videoScroll .videoItem .video{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.videoContainer .videoScroll .videoItem .videoImg{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}

.videoScroll .videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.comments_praised .btn:after {
  border: none;
}
.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}