.recommendContainer{
  height: 100%;
}
.recommendContainer .header{
  position: relative;
  height: 300rpx;
}
.recommendContainer .header .headerImg{
  height: 300rpx;
  width: 100%;
}
.recommendContainer .header .headerDate{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  text-align: center; 
  line-height: 200rpx;
  color: #fff;
  font-size: 38rpx;
}
/* marin */
.recommendContainer .main{
  position: relative;
  background-color:white;
  /* height: 400rpx; */
  margin-top: -20rpx;
  border-radius: 30rpx;
  padding: 20rpx;
}
.recommendContainer .main .mainHeader{
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
}

.recommendContainer .main .mainScroll{
  height: calc(100vh - 382rpx);
  padding-top: 20rpx;
}
.recommendContainer .main .mainScroll .scrollItem{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
/* text  line color font */
.recommendContainer .main .mainScroll .scrollItem .songImg{
  width: 80rpx;
  height: 80rpx;
}

.recommendContainer .main .mainScroll .scrollItem .song{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 28rpx;
}