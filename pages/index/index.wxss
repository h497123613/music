/* pages/index/index.wxss */
.indexContainer {
  height: 100%;
}

.indexContainer .bannerSwiper {
  height: 300rpx;
}

.indexContainer .bannerSwiper .swiperItem {
  height: 100%;
}

/* 轮播图 */
.indexContainer .bannerSwiper .swiperItem .img {
  width: 100%;
  height: 300rpx;
}

/* 导航 */
.navList {
  display: flex;
  justify-content: space-around;
}

.navList .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navList .navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  background-color: #D53C33;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 45rpx;
  margin: 20rpx 0;
}

.navList .navItem .navText {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.indexContainer .recommend {
  padding: 20rpx;
}
/* scroll-view */
.indexContainer .recommend .scroll{
  display: flex;
  height: 300rpx;
}
.indexContainer .recommend .scroll .scrollItem {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemText {
  font-size: 28rpx;
  width: 200rpx;
  /* 多行文本溢出出现省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /** 多行文本溢出...*/
  overflow: hidden;
  /*
  单行文本溢出出现省略号 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
}
/* 排行榜(rank) */
.indexContainer .rank {
  padding: 20rpx;
}
.indexContainer .rank .rankSwiper{
  height: 400rpx;
}
.indexContainer .rank .rankSwiper .swiperItem{
  height: 400rpx;
}
.indexContainer .rank .rankSwiper .swiperItem .main{
  width: 90%;
  height: 400rpx;
  margin: 0 auto;
  background-color: #ccc;
  padding: 20rpx;
}
.indexContainer .rank .rankSwiper .swiperItem .main .mainTitle{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.indexContainer .rank .rankSwiper .swiperItem .main .mainList .mainListItem{
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.indexContainer .rank .rankSwiper .swiperItem .main .mainList .mainListItem .songImg{
  width: 100rpx;
  height: 100rpx;
}
.indexContainer .rank .rankSwiper .swiperItem .main .mainList .mainListItem .count{
  margin: 0 50rpx;
}
.indexContainer .rank .rankSwiper .swiperItem .main .mainList .mainListItem .songName{
  font-size: 28rpx;
}